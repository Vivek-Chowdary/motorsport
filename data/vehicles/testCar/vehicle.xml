<?xml version="1.0" encoding="ISO-8859-1"?>
<vehicle
    name = "Test Car"
    description = "A simple car, RWD, not very powerful, etc... What the name says: Just a test car."
    author = "STenyaK"
    contact = "stenyak AT gmx DOT net"
    license = "Creative Commons Attribution-NonCommercial-ShareAlike License"
    >
    <body
        >
        <graphics
            material = "testcarbodyMaterial"
            mesh = "../data/vehicles/testCar/body.mesh"
            ogreName = "testCarBody"
            >
        </graphics>
        <physics
            length = "4.0"
            width = "2.0"
            height = "1.25" 
            mass = "1250.0"
            >
        </physics>
    </body>
    <clutchPedal
        inputAxis = "normalizedRelativeRotation"
        >
    </clutchPedal>
    <gasPedal
        inputAxis = "normalizedRelativeRotation"
        >
    </gasPedal>
    <brakePedal
        inputAxis = "normalizedRelativeRotation"
        >
    </brakePedal>
    <engine
        torqueLinearMultiplier = "20.0"
        >
    </engine>
    <clutch
        >
    </clutch>
    <shiftUpPaddle
        inputAxis = "normalizedRelativeRotation"
        >
    </shiftUpPaddle>
    <shiftDownPaddle
        inputAxis = "normalizedRelativeRotation"
        >
    </shiftDownPaddle>
    <gearbox
        gear-1Ratio = "-4.0"
        gear1Ratio = "3.5"
        gear2Ratio = "2.0"
        gear3Ratio = "1.4"
        gear4Ratio = "1.0"
        gear5Ratio = "0.8"
        finaliDrive = "0.12"
        >
    </gearbox>
    <steeringWheel
        inputAxis = "normalizedRelativeRotation"
        wheelAngleMultiplier = "15.0"
        >
    </steeringWheel>
    <suspensionList>
        <suspension
            name = "FrontRight"
            springConstant = "1?"
            damperConstant = "1?"
            posX = "+1.6"
            posY = "+0.9"
            posZ = "-0.2"
            >
        </suspension>
        <suspension
            name = "FrontLeft"
            springConstant = "1?"
            damperConstant = "1?"
            posX = "+1.6"
            posY = "-0.9"
            posZ = "-0.2"
            >
        </suspension>
        <suspension
            name = "RearRight"
            springConstant = "1?"
            damperConstant = "1?"
            posX = "-1.7"
            posY = "+0.92"
            posZ = "-0.25"
            >
        </suspension>
        <suspension
            name = "RearLeft"
            springConstant = "1?"
            damperConstant = "1?"
            posX = "-1.7"
            posY = "-0.92"
            posZ = "-0.25"
            >
        </suspension>
    </suspensionList>
    <wheel
        >
        <physics
            mass = "15.0"
            radius = "0.4"
            width = "0.2"
            >
        </physics>
        <graphics
            material = "testcarwheelMaterial"
            mesh = "../data/testcarwheel.mesh"
            ogreName = "testcarwheel%i"
            >
        </graphics>
    </wheel>
</vehicle>
